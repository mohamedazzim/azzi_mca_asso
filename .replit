modules = ["nodejs-18", "web", "bash"]
run = "npm run dev"

[nix]
channel = "stable-25_05"
packages = ["tree"]

[agent]
expertMode = true

[workflows]
runButton = "Next.js App"

[[workflows.workflow]]
name = "Next.js App"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- -p 8080"
waitForPort = 8080

[[ports]]
localPort = 8080
externalPort = 80

[deployment]
run = ["npm", "run", "start", "--", "-p", "8080"]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
